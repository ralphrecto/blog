<!doctype html>
<head>
  <meta charset="utf-8">
  <title></title>
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
  <style>

    html {
      height: 100%;
    }

    body {
      height: 100%;
    }

    #main-container {
      height: inherit;
    }

    #content p:first-of-type:first-letter {
      font-size: 4.5em;
      float:left;
    margin-right: 0.15em;
    line-height: 1.0;
  }

  #sidebar {
    text-align: right;
    padding-right: 30px;
    border-right: 3px double gray;
  }

  p {
    margin-bottom: 0.5em;
  }

  @media (max-width: 767.98px) {
    padding: 20px;
  }

  @media (max-width: 767.98px) {
    body {
      padding-top: 20px;
      padding-left: 30px;
      padding-right: 30px;
    }
  }

  @media (max-width: 9999px) {
    body {
      padding-top: 50px;
      padding-left: 100px;
      padding-right: 100px;
    }
  }

  #content {
    text-align: justify;
    padding-left: 30px;
  }

    body {
      font-family: georgia;
      line-height: 1.5;
      font-size: 16px;
    }

    #nav {
      padding-top: 30px;
      font-variant: small-caps;
      font-size: 20px;
    }

    .section {
      margin-top: 40px;
      font-style: italic;
    }

    #nav a {
      color: black;
    }
  </style>
</head>

<body>
  <div id="main-container" class="container-fluid">
    <div class="row h-100">
      <div class="col-3" id="sidebar">
        <p style="font-size: 24px; font-style:italic; font-weight: bold;">{{ title }}</p>
        <p style="font-size: 14px;">August 22, 2020</p>
        <div id="nav">
          <p><a href="#">about</a></p>
          <p><a href="#">blog</a></p>
        </div>
      </div>
      <div class="col-9" id="content">
      {{ content }}
      </div>
    </div>
  </div>
</body>

</html>
